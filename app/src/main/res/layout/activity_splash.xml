<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    tools:context=".SplashActivity">
    <TextView
        android:id="@+id/text1"
        android:text="@string/text1"
        android:textSize="18sp"
        android:gravity="center"
        android:textColor="@color/black"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>
    <LinearLayout
        android:id="@+id/linear"
        android:orientation="vertical"
        android:padding="10dp"
        app:layout_constraintTop_toBottomOf="@id/text1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraint1"
            android:layout_marginBottom="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/image_gps"
                android:src="@drawable/gps_icon"
                app:layout_constraintTop_toTopOf="@id/constraint1"
                app:layout_constraintBottom_toBottomOf="@id/constraint1"
                app:layout_constraintLeft_toLeftOf="@id/constraint1"
                android:layout_width="40dp"
                android:layout_height="40dp"/>
            <TextView
                android:id="@+id/tv_gps"
                android:text="@string/gps"
                android:textColor="@color/black"
                android:textSize="18sp"
                app:layout_constraintTop_toTopOf="@id/constraint1"
                app:layout_constraintBottom_toBottomOf="@id/constraint1"
                app:layout_constraintLeft_toRightOf="@id/image_gps"
                android:layout_marginStart="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <ImageView
                android:id="@+id/image_gps_x"
                app:layout_constraintTop_toTopOf="@id/constraint1"
                app:layout_constraintBottom_toBottomOf="@id/constraint1"
                app:layout_constraintRight_toRightOf="@id/constraint1"
                android:layout_marginEnd="15dp"
                android:src="@drawable/error_icon"
                android:layout_width="40dp"
                android:layout_height="40dp"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraint2"
            android:layout_marginBottom="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/image_kamera"
                android:src="@drawable/kamera_icon"
                app:layout_constraintTop_toTopOf="@id/constraint2"
                app:layout_constraintBottom_toBottomOf="@id/constraint2"
                app:layout_constraintLeft_toLeftOf="@id/constraint2"
                app:layout_constraintRight_toLeftOf="@id/tv_kamera"
                android:layout_width="40dp"
                android:layout_height="40dp"/>
            <TextView
                android:id="@+id/tv_kamera"
                android:text="@string/kamera"
                android:textColor="@color/black"
                android:textSize="18sp"
                app:layout_constraintTop_toTopOf="@id/constraint2"
                app:layout_constraintBottom_toBottomOf="@id/constraint2"
                app:layout_constraintLeft_toRightOf="@id/image_kamera"
                android:layout_marginStart="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <ImageView
                android:id="@+id/image_kamera_x"
                app:layout_constraintTop_toTopOf="@id/constraint2"
                app:layout_constraintBottom_toBottomOf="@id/constraint2"
                app:layout_constraintRight_toRightOf="@id/constraint2"
                android:layout_marginEnd="15dp"
                android:src="@drawable/error_icon"
                android:layout_width="40dp"
                android:layout_height="40dp"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraint3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/image_galleriya"
                android:src="@drawable/galleriya_icon"
                app:layout_constraintTop_toTopOf="@id/constraint3"
                app:layout_constraintBottom_toBottomOf="@id/constraint3"
                app:layout_constraintLeft_toLeftOf="@id/constraint3"
                app:layout_constraintRight_toLeftOf="@id/tv_galleriya"
                android:layout_width="40dp"
                android:layout_height="40dp"/>
            <TextView
                android:id="@+id/tv_galleriya"
                android:text="@string/galleriya"
                android:textColor="@color/black"
                android:textSize="18sp"
                app:layout_constraintTop_toTopOf="@id/constraint3"
                app:layout_constraintBottom_toBottomOf="@id/constraint3"
                app:layout_constraintLeft_toRightOf="@id/image_galleriya"
                android:layout_marginStart="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <ImageView
                android:id="@+id/image_galleriya_x"
                app:layout_constraintTop_toTopOf="@id/constraint3"
                app:layout_constraintBottom_toBottomOf="@id/constraint3"
                app:layout_constraintRight_toRightOf="@id/constraint3"
                android:layout_marginEnd="15dp"
                android:src="@drawable/error_icon"
                android:layout_width="40dp"
                android:layout_height="40dp"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>
    <androidx.cardview.widget.CardView
        android:id="@+id/card"
        app:cardCornerRadius="25dp"
        app:cardBackgroundColor="#20FD08"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:clickable="true"
        android:layout_marginHorizontal="20dp"
        app:layout_constraintTop_toBottomOf="@id/linear"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">
        <TextView
            android:text="Ruxsat berish"
            android:textAllCaps="true"
            android:textSize="18sp"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>